% lexau.sty -- Style sheet for LExAu documents

\ProvidesPackage{lexau}

\RequirePackage{palatino}
\RequirePackage{hyperref}
\RequirePackage{graphicx}
\RequirePackage[official]{eurosym}
\RequirePackage{tabularx}
\RequirePackage{fancyhdr}
\RequirePackage{lastpage}
\RequirePackage{hyphenat}
\RequirePackage{amssymb}
\RequirePackage{color}

\def\greyspec{[rgb]{0.4,0.4,0.4}}
\def\grey{\expandafter\color\greyspec\relax }
\def\greytext{\expandafter\textcolor\greyspec}

\def\English#1{\foreignlanguage{english}{\it #1\/}}
\def\Code#1{{\ttfamily\selectfont #1}}
\def\Value#1{{\bfseries #1}}
\let\Dimmed=\greytext
\def\LExAu/{{\bfseries L}Ex{\itshape Au}}

\def\labelitem#1{\item \hskip -1em %
  {%\bf
    #1%
  }\hfill\hbox{}\break
}
\def\DASH{\nobreak\thinspace---\thinspace
  \penalty\exhyphenpenalty\relax }

\fancypagestyle{plain}{%
  \fancyhead{} % clear all headers
}
\def\headerfont{\sffamily\grey}
\pagestyle{fancy}
\fancyhf{} % clear all headers and footers
\lhead{\headerfont\thetitle}
\chead{}
\rhead{}
\lfoot{\headerfont\small Page \thepage\ of \pageref{LastPage}}
\cfoot{\headerfont\small \SvnDate/}
\rfoot{\headerfont\small \copyright\ \LExAu/}
\renewcommand{\headrulewidth}{0pt}

\emergencystretch=2 em
\renewcommand{\topfraction}{.85}
\renewcommand{\bottomfraction}{.7}
\renewcommand{\textfraction}{.15}
\renewcommand{\floatpagefraction}{.66}
\renewcommand{\dbltopfraction}{.66}
\renewcommand{\dblfloatpagefraction}{.66}
\setcounter{topnumber}{9}
\setcounter{bottomnumber}{9}
\setcounter{totalnumber}{20}
\setcounter{dbltopnumber}{9}
\setlength{\textfloatsep}{14pt plus 1 fill}
